<div x-data="{ show: false }" class="space-y-4" x-cloak>
  <button 
    @click="show = !show" 
    class="bg-teal-500 hover:bg-teal-700 text-white px-4 py-2 rounded"
  >
    Toggle Text
  </button>

  <p x-show="show" x-transition class="mt-2 text-teal-300">
    Here is some toggled text!
  </p>
</div>
